@model EntityLayer.Concrete.Skill
@{
    ViewData["Title"] = "EditSkill";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.SkillID)
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(x=>x.Title, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Değer</label>
                    @Html.TextBoxFor(x=>x.Value, new{@class="form-control"})
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

