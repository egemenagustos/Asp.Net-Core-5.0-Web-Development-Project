@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageDetail";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample">
                @Html.HiddenFor(x=>x.WriterMessageID, new{@class="form-control"})
                <div class="form-group">
                    <label for="exampleInputName1">Başlık</label>
                    @Html.TextBoxFor(x=>x.Subject, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Gönderen</label>
                    @Html.TextBoxFor(x=>x.SenderName, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Alıcı</label>
                    @Html.TextBoxFor(x=>x.ReceiverName, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Tarih</label>
                    @Html.TextBoxFor(x=>x.Date, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleTextarea1">Mesaj</label>
                    @Html.TextAreaFor(x=>x.MessageContent, 10,2, new{@class="form-control"})
                </div>
                <a asp-action="ReceiverMessageList" class="btn btn-primary mr-2">Admin Gelen Mesajlar</a>
                <a asp-action="SenderMessageList" class="btn btn-warning mr-2">Admin Giden Mesajlar</a>
            </form>
        </div>
    </div>
</div>

