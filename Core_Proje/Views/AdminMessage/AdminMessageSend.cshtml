@model EntityLayer.Concrete.WriterMessage
@{
    ViewData["Title"] = "AdminMessageSend";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                <div class="form-group">
                    <label for="exampleInputName1">Konu</label>
                    @Html.TextBoxFor(x=>x.Subject, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Alıcı</label>
                    @Html.TextBoxFor(x=>x.Receiver, new{@class="form-control"})
                </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Mesaj</label>
                        @Html.TextAreaFor(x=>x.MessageContent, 10,6, new{@class="form-control"})
                    </div>
                <button class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

