@model EntityLayer.Concrete.Testimonial
@{
    ViewData["Title"] = "EditTestimonial";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <form class="forms-sample" method="post">
                @Html.HiddenFor(x=>x.TestimonialID)
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    @Html.TextBoxFor(x=>x.Client, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputName1">Şirket</label>
                    @Html.TextBoxFor(x=>x.Company, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu</label>
                    @Html.TextBoxFor(x=>x.ImageUrl, new{@class="form-control"})
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail3">Resim Yolu</label>
                    @Html.TextAreaFor(x=>x.Comment,10,6, new{@class="form-control"})
                </div>
                <button class="btn btn-primary mr-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>

