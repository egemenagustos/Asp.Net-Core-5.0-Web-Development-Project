@model EntityLayer.Concrete.Message
@{
    ViewData["Title"] = "ContactDetail";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.MessageID, new{@class="form-control"})
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Tarih</label>
                        @Html.TextBoxFor(x=>x.Date, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Mail</label>
                        @Html.TextBoxFor(x=>x.Mail, new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x=>x.Content, 10,2, new{@class="form-control"})
                    </div>
                    <a asp-action="Index" class="btn btn-primary mr-2">İletişim Sayfası</a>
                </form>
            </div>
        </div>
    </div>


