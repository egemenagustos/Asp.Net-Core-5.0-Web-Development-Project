@model EntityLayer.Concrete.SocialMedia
@{
    ViewData["Title"] = "EditSocialMedia";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditSocialMedia", "SocialMedia", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                    @Html.HiddenFor(x=>x.SocialMediaID, new{@class="form-control"})
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Url</label>
                        @Html.TextBoxFor(x=>x.Url, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">İkon</label>
                        @Html.TextBoxFor(x=>x.Icon, new{@class="form-control"})
                    </div>
                    <button class="btn btn-primary mr-2">Güncelle</button>
                </form>
            </div>
        </div>
    </div>
}


