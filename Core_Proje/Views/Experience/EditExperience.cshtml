@model EntityLayer.Concrete.Experience
@{
    ViewData["Title"] = "EditExperience";
    Layout = "~/Views/Shared/_NewAdminLayout.cshtml";
}

@using (Html.BeginForm("EditExperience", "Experience", FormMethod.Post))
{
    <div class="col-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <form class="forms-sample">
                       @Html.HiddenFor(x=>x.ExperienceID, new{@class="form-control"})
                    <div class="form-group">
                        <label for="exampleInputName1">Başlık</label>
                        @Html.TextBoxFor(x=>x.Name, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail3">Tarih</label>
                        @Html.TextBoxFor(x=>x.Date, new{@class="form-control"})
                    </div>
                    <div class="form-group">
                        <label for="exampleInputPassword4">Resim URL</label>
                        @Html.TextBoxFor(x=>x.ImageUrl, new{@class="form-control"})
                    </div>

                    <div class="form-group">
                        <label for="exampleTextarea1">Açıklama</label>
                        @Html.TextAreaFor(x=>x.Description, 10,2, new{@class="form-control"})
                    </div>
                    <button class="btn btn-primary mr-2">Kaydet</button>
                </form>
            </div>
        </div>
    </div>
}

